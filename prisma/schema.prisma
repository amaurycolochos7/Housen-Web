generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String        @id @default(uuid())
  slug          String        @unique
  name          String
  description   String        @db.Text
  type          String        // RESIDENCIAL | COMERCIAL | OBRA
  status        String        // PROXIMO | EN_CONSTRUCCION | ENTREGADO
  location      String
  coverImage    String
  galleryImages String[]
  isFeatured    Boolean       @default(false)
  published     Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  leads         ContactLead[]
}

model ContactLead {
  id           String        @id @default(uuid())
  name         String
  phone        String
  email        String?
  message      String?       @db.Text
  notes        String?       @db.Text
  status       String        @default("NUEVO") // NUEVO | CONTACTADO | CITA_PROGRAMADA | SEGUIMIENTO | CERRADO | PERDIDO
  projectId    String?
  project      Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  source       String        // WEB | WHATSAPP
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Appointment {
  id        String      @id @default(uuid())
  leadId    String
  lead      ContactLead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  datetime  DateTime
  location  String?
  notes     String?     @db.Text
  status    String      @default("PENDIENTE") // PENDIENTE | COMPLETADA | CANCELADA
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model TrackedEvent {
  id        String   @id @default(uuid())
  type      String   // WHATSAPP_CLICK | NAV_CLICK
  category  String?  // HERO | FOOTER | FLOAT
  metadata  Json?
  createdAt DateTime @default(now())
}

model SiteConfig {
  id                     String @id @default("main")
  companyName            String
  address                String @db.Text
  phone                  String
  whatsappNumber         String
  whatsappDefaultMessage String @db.Text
  mapEmbedUrl            String @db.Text
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  passwordHash String
  role         String @default("ADMIN")
}
